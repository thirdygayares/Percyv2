<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    tools:context=".CateringInfo">

    <androidx.cardview.widget.CardView
        android:id="@+id/home_cardview"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@color/white"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/calibribold"
                android:text="Catering Info "
                android:textColor="@color/black"
                android:textSize="26dp"></TextView>


            <Button
                android:id="@+id/cateringinfo_backarrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
                app:iconGravity="start"
                app:iconTint="@color/white"></Button>



        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="376dp"
        android:layout_height="550dp"
        android:layout_centerHorizontal="true"
        app:cardElevation="10dp"
        android:layout_marginTop="100dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precy's Catering"
                android:fontFamily="@font/merriweatherregular"
                android:textColor="@color/black"
                android:textSize="21dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp">
            </TextView>

            <TextView
                android:id="@+id/cateringtext_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/precyimage"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:text="@string/PrecyCatering_Description"
                android:textAlignment="inherit"
                android:textColor="@color/black"></TextView>

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/precyimage"
                android:layout_width="340dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                app:iss_auto_cycle="true"
                app:iss_corner_radius="10"
                app:iss_period="1000"></com.denzcoskun.imageslider.ImageSlider>

            <androidx.cardview.widget.CardView
                android:id="@+id/schedulecardview"
                android:layout_width="352dp"
                android:layout_height="65dp"
                android:layout_below="@id/cateringtext_info"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="31dp"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/scheduleofevent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="73dp"
                        android:layout_marginTop="9dp"
                        android:fontFamily="@font/titilliumwebsemibold"
                        android:text="Our Location"
                        android:textColor="@color/black"
                        android:textSize="22dp"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/scheduleofevent"
                        android:layout_marginLeft="73dp"
                        android:fontFamily="@font/titilliumwebregular"
                        android:text="Quick info on our location"
                        android:textSize="12dp"></TextView>

                    <ImageView
                        android:layout_width="47dp"
                        android:layout_height="43dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="11dp"
                        android:src="@drawable/locationicon"></ImageView>

                    <Button
                        android:id="@+id/ourlocation_btn"
                        android:layout_width="400dp"
                        android:layout_height="70dp"
                        android:layout_centerHorizontal="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:drawableRight="@drawable/ic_baseline_arrow_circle_right_24"
                        android:drawableTint="@color/gray"></Button>



                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>