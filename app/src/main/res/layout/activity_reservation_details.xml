<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reservationProcess.ReservationDetails"
    android:background="@color/bgcolor">

    <androidx.cardview.widget.CardView
        android:id="@+id/reservationDetails_cardview"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@color/white"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/calibribold"
                android:text="@string/res_details"
                android:textColor="@color/black"
                android:textSize="26dp"></TextView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@id/reservationDetails_cardview">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <androidx.cardview.widget.CardView
                  android:layout_width="380dp"
                  android:layout_height="wrap_content"
                  android:layout_centerHorizontal="true"
                  android:layout_marginBottom="10dp"
                  android:layout_marginTop="30dp"
                  app:cardElevation="10dp">

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">

                      <LinearLayout
                          android:id="@+id/linearLayout"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                          <androidx.cardview.widget.CardView
                              android:id="@+id/reservationID_cardView"
                              android:layout_width="180dp"
                              android:layout_height="40dp"
                              android:layout_marginLeft="20dp"
                              android:layout_marginTop="30dp"
                              app:cardBackgroundColor="@color/semibrown"
                              app:cardCornerRadius="10dp">

                              <RelativeLayout
                                  android:layout_width="match_parent"
                                  android:layout_height="match_parent">

                                  <TextView
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_centerInParent="true"
                                      android:fontFamily="@font/poppinsregular"
                                      android:text="@string/reservation_id"
                                      android:textColor="@color/white"
                                      android:textSize="18sp" />
                              </RelativeLayout>
                          </androidx.cardview.widget.CardView>

                          <TextView
                              android:id="@+id/reservationID_txtView"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="12dp"
                              android:layout_marginTop="35dp"
                              android:text="2021-ABFHYTSE"
                              android:textColor="@color/black"
                              android:textSize="20sp"
                              android:textStyle="bold" />

                      </LinearLayout>

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="30dp"
                          android:layout_marginTop="20dp"
                          android:text="Name"
                          android:textColor="@color/black"
                          android:textSize="18sp"
                          android:textStyle="bold" />

                      <TextView
                          android:id="@+id/RD_clientName"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="30dp"
                          android:layout_marginTop="5dp"
                          android:text="Your name"
                          android:textColor="@color/black"
                          android:textSize="20sp" />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="30dp"
                          android:layout_marginTop="20dp"
                          android:text="@string/company_name"
                          android:textColor="@color/black"
                          android:textSize="18sp"
                          android:textStyle="bold" />

                      <TextView
                          android:id="@+id/RD_clientCompanyName"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="30dp"
                          android:layout_marginTop="5dp"
                          android:text="@string/company_name"
                          android:textColor="@color/black"
                          android:textSize="20sp" />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="30dp"
                          android:layout_marginTop="20dp"
                          android:text="@string/cpno"
                          android:textColor="@color/black"
                          android:textSize="18sp"
                          android:textStyle="bold" />

                      <TextView
                          android:id="@+id/RD_phoneNumber"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="30dp"
                          android:layout_marginTop="5dp"
                          android:text="09XXXXXXXX"
                          android:textColor="@color/black"
                          android:textSize="20sp" />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="30dp"
                          android:layout_marginTop="20dp"
                          android:text="Reservation Date"
                          android:textColor="@color/black"
                          android:textSize="18sp"
                          android:textStyle="bold" />

                      <TextView
                          android:id="@+id/RD_date"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="30dp"
                          android:layout_marginTop="5dp"
                          android:text="Sunday, January 07, 2001"
                          android:textColor="@color/black"
                          android:textSize="20sp" />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="30dp"
                          android:layout_marginTop="20dp"
                          android:text="Reservation Venue"
                          android:textColor="@color/black"
                          android:textSize="18sp"
                          android:textStyle="bold" />

                      <TextView
                          android:id="@+id/RD_venu"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="30dp"
                          android:layout_marginTop="5dp"
                          android:text="Address"
                          android:textColor="@color/black"
                          android:textSize="20sp" />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="30dp"
                          android:layout_marginTop="20dp"
                          android:text="Event"
                          android:textColor="@color/black"
                          android:textSize="18sp"
                          android:textStyle="bold" />

                      <TextView
                          android:id="@+id/RD_event"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="30dp"
                          android:layout_marginTop="5dp"
                          android:text="Birthday Event"
                          android:textColor="@color/black"
                          android:textSize="20sp" />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="30dp"
                          android:layout_marginTop="20dp"
                          android:text="@string/peopleno"
                          android:textColor="@color/black"
                          android:textSize="18sp"
                          android:textStyle="bold" />

                      <TextView
                          android:id="@+id/RD_numofPeople"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="30dp"
                          android:layout_marginTop="5dp"
                          android:text="20"
                          android:textColor="@color/black"
                          android:textSize="20sp" />

                      <androidx.appcompat.widget.AppCompatButton
                          android:id="@+id/changeDetails_Btn"
                          android:layout_width="match_parent"
                          android:layout_height="50dp"
                          android:layout_marginStart="20dp"
                          android:layout_marginTop="20dp"
                          android:layout_marginEnd="20dp"
                          android:background="@color/white"
                          android:text="@string/change_details"
                          android:textColor="@color/black" />

                      <androidx.appcompat.widget.AppCompatButton
                          android:id="@+id/proceed_Btn"
                          android:layout_width="match_parent"
                          android:layout_height="50dp"
                          android:layout_marginStart="20dp"
                          android:layout_marginTop="5dp"
                          android:layout_marginEnd="20dp"
                          android:layout_marginBottom="20dp"
                          android:background="@color/semibrown"
                          android:text="Reserve now"
                          android:textColor="@color/white" />
                  </LinearLayout>
              </androidx.cardview.widget.CardView>
          </RelativeLayout>
       </LinearLayout>
   </ScrollView>

</RelativeLayout>