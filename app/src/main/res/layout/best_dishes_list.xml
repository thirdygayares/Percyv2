<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
   >

    <ImageView
        android:id="@+id/bestDishes_imageView"
        android:layout_width="189dp"
        android:layout_height="95dp"
        android:src="@drawable/chickencordonbleu1"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
       />

    <TextView
        android:id="@+id/dishName_txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chicken_cordon_bleu"
        android:fontFamily="@font/titilliumwebsemibold"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/courseName_txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Course"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/scopeoneregular"
        android:textSize="11sp"/>


</LinearLayout>